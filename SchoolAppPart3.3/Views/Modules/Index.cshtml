@model IEnumerable<SchoolAppPart3._3.Models.Modules>

@{
    ViewData["Title"] = "Index";
}
<div class="container-p3" style="background:#DCDCDC">
<div class="text-center">
<h1 >Module</h1>
</div>
<form  asp-action="Storage">
    <div class="form-group">
            <label for="NoSemesterWeek" class="control-label">Enter number of weeks in the semester</label>
            <input name="NoSemesterWeek" type="number" id="NoWeeks" class="form-control" />
        
    </div>
    <div class="form-group">
        <label for="StartDate" class="control-label">Enter start date of the semester</label>
        <input name="StartDate" type="date" id="StartDate" class="form-control" />
      
    </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-primary" />
        </div>
            
</form>

    <p class="btn btn-primary text-black" style="background-color:#8f8f8f">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                <div id="button" class ="btn btn-primary text-black" style="background-color:#8f8f8f">
                            <button><a asp-action="Edit" asp-route-id="@item.Code">Edit</a></button> |
                            <button><a asp-action="Details" asp-route-id="@item.Code">Details</a></button> |
                            <button><a asp-action="Delete" asp-route-id="@item.Code">Delete</a></button>
                </div>

            </td>
        </tr>
}
    </tbody>
</table>
</div>
